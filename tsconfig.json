{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": [
            "reflect-metadata"
        ],
        "paths": {
            "*": [
                "node_modules/",
                "src/types/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}